
# ===============================
# DATABASE - JDBC
# ===============================
 
# Basic SpringBoot Config for Oracle
#Pilote JDBC
spring.datasource.driver-class-name=oracle.jdbc.OracleDriver
#Quel Base de donnee
spring.datasource.url=jdbc:oracle:thin:@localhost:1521:orcl
#Identifiant
spring.datasource.username=Henri
#Mot de passe
spring.datasource.password=henri


# ===============================
# JPA / HIBERNATE
# ===============================
 
# Afficher les requete SQL
spring.jpa.show-sql=true
#Pratique d 'utiliser CREATE dans la phase de Test -> Une fois que c'est fait mettre UPDATE
spring.jpa.hibernate.ddl-auto=create
#Dialecte
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.Oracle10gDialect

